; AD  : This Kerberos configuration is for CERN's Active Directory realm
; The line above this is magic and is used by cern-config-keytab. Do
; not remove.

; Installed with puppet from a series of
; template fragments.

; /etc/krb5.conf

[libdefaults]
<% if krb5default.length > 0 -%>
default_realm = <%= krb5default %>
 <% end -%>
ticket_lifetime = <%= krb5ticket_lifetime %>
renew_lifetime = <%= krb5renew_lifetime %>
forwardable = <%= krb5forwardable %> 
proxiable = <%= krb5proxiable %>
default_tkt_enctypes = <%= krb5enctype.join(' ') %>

[appdefaults]
<% if krb5pam.length > 0 -%>
pam = {
<% krb5pam.each do | key,val | -%>
         <%= key %> = <%= val %>
<% end -%>
}
<% end -%>

